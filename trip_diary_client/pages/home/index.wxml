<nav nav-type="search" />
<view class="home-container">
    <view class="home-content">
        <t-tabs defaultValue="recommend">
            <t-tab-panel label="推荐" value="recommend">

                <view class="waterfall-container">
                    <view class="waterfall-column">
                        <card
                            wx:for="{{leftColumnData}}"
                            wx:key="_id"
                            title="{{item.title}}"
                            url="{{item.images[0].url}}"
                            tags="{{item.tags}}"
                            avatarUrl="{{item.userInfo.avatarUrl}}"
                            nickname="{{item.userInfo.nickname}}"
                            width="{{item.images[0].width}}"
                            height="{{item.images[0].height}}" />
                    </view>

                    <view class="waterfall-column">
                        <card
                            wx:for="{{rightColumnData}}"
                            wx:key="_id"
                            title="{{item.title}}"
                            url="{{item.images[0].url}}"
                            tags="{{item.tags}}"
                            avatarUrl="{{item.userInfo.avatarUrl}}"
                            nickname="{{item.userInfo.nickname}}"
                            width="{{item.images[0].width}}"
                            height="{{item.images[0].height}}" />
                    </view>
                </view>

            </t-tab-panel>

            <t-tab-panel label="我的关注" value="follow">
                <view class="home-card-list">
                    <card
                        wx:for="{{focusdiaryList}}"
                        wx:key="index"
                        desc="{{item.desc}}"
                        url="{{item.url}}"
                        tags="{{item.tags}}" />
                </view>
            </t-tab-panel>
        </t-tabs>
    </view>
</view>

<view class="home-release">
    <t-button
        theme="primary"
        size="large"
        icon="add"
        shape="round"
        bindtap="goRelease">
        发布
    </t-button>
</view>
<t-message id="t-message" />
