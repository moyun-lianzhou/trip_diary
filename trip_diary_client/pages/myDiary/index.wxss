.container {
    padding: 12px;
    background-color: #f5f5f7;
    min-height: 100vh;
  }
  
  .diary-item {
    background-color: #fff;
    border-radius: 8px;
    display: flex;
    padding: 10px;
    margin-bottom: 16px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }
  
  .diary-image {
    width: 100px;
    height: 80px;
    border-radius: 6px;
    object-fit: cover;
    flex-shrink: 0;
  }
  
  .diary-content {
    flex: 1;
    margin-left: 14px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .text-content {
    margin-bottom: 8px;
  }
  
  .diary-title {
    font-size: 16px;
    font-weight: 600;
    color: #222;
    line-height: 22px;
  }
  
  .diary-description {
    font-size: 13px;
    color: #666;
    line-height: 18px;
    margin-top: 4px;
  }
  
  .action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .status {
    padding: 4px 10px;
    border-radius: 14px;
    font-size: 12px;
    color: #fff;
    user-select: none;
    width: 72px;
    text-align: center;
  }
  
  .status-approved {
    background-color: #3cb371; /* 绿色 */
  }
  
  .status-pending {
    background-color: #999999; /* 灰色 */
  }
  
  .button-group {
    display: flex;
    gap: 10px;
  }
  
  .btn-delete,
  .btn-edit {
    border: 1px solid #1890ff;
    background-color: #fff;
    color: #1890ff;
    font-size: 14px;
    padding: 4px 14px;
    border-radius: 4px;
  }
  
  .btn-delete {
    color: #f44336;
    border-color: #f44336;
  }

  .status-rejected {
    background-color: #f44336; /* 红色背景 */
    color: #fff; /* 白色文字 */
    padding: 4px 10px;
    border-radius: 14px;
    font-size: 12px;
  }

  .btn-publish {
    background-color: #007aff; /* 蓝色背景 */
    color: white; /* 白色文字 */
    padding: 10px 15px;
    border-radius: 5px;
    margin-bottom: 10px; /* 与列表的间距 */
    text-align: center;
    font-size: 16px;
  }

  
  .custom-title {
    margin-left: 8rpx;
    font-size: 28rpx;
    font-weight: 400;
  }
