.container {
    padding: 24rpx;
    background-color: #f5f5f7;
    min-height: 100vh;
  }
  .diary-container{
    margin-bottom: 18rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }

  .diary-content-container {
    display: flex;
    flex-direction: row;
    padding: 24rpx;
  }
  
  .diary-image {
    width: 225rpx;
    height: 180rpx;
    border-radius: 16rpx;
    object-fit: cover;
  }
  
  .diary-content {
    display: flex;
    flex-direction: column;
    padding-right: 8rpx;
    padding-top: 4rpx;
    flex: 1;
    flex-shrink: 1;
    margin-left: 24rpx;
  }
  
  .diary-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #222;
  }
  
  .diary-desc {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-word;
    font-size: 24rpx;
    color: #666;
    line-height: 36rpx;
    max-height: 72rpx; /* 保证不超过 2 行高度 */
  }

  .diary-reject-desc{
    text-overflow: ellipsis;
    font-size: 13px;
    color: red;
  }
  
  .action-bar {
    display: flex;
    padding: 0rpx 24rpx;
    padding-bottom: 24rpx;
    justify-content: space-between;
    align-items: center;
  }
  
  .status {
    padding: 16rpx 12rpx;
    border-radius: 16rpx;
    font-size: 24rpx;
    color: #fff;
    width: 128rpx;
    text-align: center;
  }
  
  .status-approved {
    background-color: #3cb371; /* 绿色 */
  }
  
  .status-pending {
    background-color: #b8b8b8; /* 灰色 */
  }
  
  .button-group {
    display: flex;
    flex-direction: row;
    gap: 10px;
  }
  
  .btn-delete,
  .btn-edit {
    border: 1px solid #1890ff;
    background-color: #fff;
    color: #1890ff;
    font-size: 24rpx;
    border-radius: 16rpx;
  }
  
  .btn-delete {
    color: #f44336;
    border-color: #f44336;
  }

  .status-rejected {
    background-color: #f77167; /* 红色背景 */
    color: #fff; /* 白色文字 */
  }

  .custom-title {
    margin-left: 8rpx;
    font-size: 28rpx;
    font-weight: 400;
  }
  .go_release{
    color: sky;
    margin-left: 200rpx;
    color: #1D7DFC;
  }