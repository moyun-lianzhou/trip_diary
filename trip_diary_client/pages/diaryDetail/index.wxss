/* pages/diaryDetail/index.wxss */
  .nav-content{
      display: flex;
      flex-direction: row;
      align-items: center;
      font-size: 28rpx;
      padding-left: 20rpx;
  }
  .nickname{
      margin-left: 20rpx;
  }


  /* 添加滚动容器样式 */
.scroll-container {
    height: calc(100vh - 68);
  }

  /* 轮播图 */
.detail-banner {
    width: 100%;
    height: 500rpx;
    padding: 0 0 40rpx 0;
  }
   
  .banner-img {
    width: 100%;
    height: 100%;
  }
  /* video */
   
  .box-w {
    width: 100%;
    height: 500rpx;
  }
   
  .videocover {
    width: 100%;
    overflow: hidden;
  }
   
  .videocoverbg {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
  }
   
  .playbtn {
    position: absolute;
    top: 50%;
    z-index: 2;
    left: 50%;
    width: 50px;
    height: 50px;
    transform: translate(-50%, -50%);
  }


/* 文字 */
.text-container{
    background-color: white;
    /* height: 1000rpx; */
    padding: 18rpx;
}
.title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
  }
  
  .content {
    white-space: pre-wrap;
    line-height: 48rpx;
    letter-spacing: 4rpx;
  }

  .description {
    font-size: 28rpx;
    line-height: 1.5;
  }



.comment-container{
    margin-right: 32rpx;
    /* padding: 20px; */
    border: 1px solid white;
    width: 300rpx;
    height: 58rpx;
    border-radius: 28rpx;
    background-color: #f0f0f0;
}
.comment-text{
    padding: 14rpx 10rpx 4rpx 40rpx;
    color: rgb(202, 202, 202);
}


  /* 底部栏 */
  .footer-interaction {
    height: 68rpx;
    border-top: 2rpx solid #F4F4F4;
    position: fixed;
    width: 100%;
    bottom: 0;
    background-color: #ffffff;
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    z-index: 100; /* 确保底部栏在最上层 */
  }
  .like, .comment, .collect {
    display: flex;
    align-items: center;
  }
  .like image, .comment image, .collect image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
  }


  .blank-container{
    height: 128rpx;
  }